<%- include("partials/header-admin") %>

<main class="container mt-auto px-2 py-3">
    <h2><span class="text-muted">Edit your </span>POST.</h2>
    <form class="mx-auto mt-2" action="/posts/edit/:<%= post_id %> " method="POST">
        <div class="row g-3 mb-3">
            <div class="col-sm-6">
                <label for="firstName" class="form-label">Title</label>
                <input type="text" class="form-control" id="firstName" name="post_title" placeholder="" value="<%= post_title %>">
            </div>

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Date</label>
                <input type="text" class="form-control" id="date" name="post_date" placeholder="" value="<%= post_date %> ">
            </div>

            <div class="col-12">
                <label for="message" class="form-label">Subject</label>
                <input type="text" class="form-control" id="subject" name="post_sub" placeholder="" value="<%= post_subject %>">
            </div>

            <div class="col-12">
                <label for="message" class="form-label">Enter Description</label>
                <textarea class="form-control" cols="15" rows="7" name="post_desc" placeholder="<%= post_content %> "></textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-primary d-flex p-2 align-items-center"><span class="mx-1">save changes</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cursor" viewBox="0 0 16 16">
                <path d="M14.082 2.182a.5.5 0 0 1 .103.557L8.528 15.467a.5.5 0 0 1-.917-.007L5.57 10.694.803 8.652a.5.5 0 0 1-.006-.916l12.728-5.657a.5.5 0 0 1 .556.103zM2.25 8.184l3.897 1.67a.5.5 0 0 1 .262.263l1.67 3.897L12.743 3.52 2.25 8.184z"/>
            </svg>
        </button>
    </form>
</main>


<%- include("partials/footer") %>